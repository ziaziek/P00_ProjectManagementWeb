<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/project_management</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.connection.username">przemo</property>
    <property name="hibernate.connection.password">derek</property>
    <mapping resource="com/przemo/projectmanagementweb/Role.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/Task.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/Sprint.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/TaskType.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/TimeLog.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/Status.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/Projects.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/Users.hbm.xml"/>
    <mapping resource="com/przemo/projectmanagementweb/TaskComments.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
